@import url('https://fonts.googleapis.com/css?family=Roboto&display=swap');

*
    font-family: 'Roboto', sans-serif;
a
    text-decoration: none    

.wrapper
    width 100%
    height auto
.container
    width 100%
    height auto
    margin 20px auto

.content-container
    display flex
    justify-content flex-end
    &>.lists-block
        width 28%
        margin-right 2%
    &>.tasks-block
        margin-left 2%
        width 68%    
   
 header>h1
    font-size: 2em

.tasks_text, .lists_text
    font-size: 1.5em
.tasks_list
    width 100%
    height auto
    margin 10px auto
    display none

.task
    display flex
    justify-content space-between
    align-items flex-end
    margin 20px 0
    padding 10px
    border-bottom: 1px solid gray
    &>p
        padding 0 10px
        width 75%
        height auto

#hintText
    margin 10px 0
    font-size: 1.2em

.form-check-input
    position: relative!important
    margin: 0!important    
   
.button:first-child
    margin-right 30px

.button
    font-family: 'Roboto', sans-serif;
    font-size: 1em
    border-radius: 10px 
    padding 5px 10px
    outline: none
    margin 0 10px
     
.buttons
    display flex
    align-items flex-end

.change_task_block
    width 80%
    display flex
    justify-content flex-end
    align-items flex-end

.add-task-form
    display flex


.create_list
    display flex
    margin: 0 0 15px 0

.list_block
    margin 10px 0 
    width auto
    height auto

#lists
    list-style none
    &>li
        width 80%
        height auto
        margin 10px 0
        text-align center
       
.list
    &:first-child
        margin: 0 10px 0 0 
    margin 0 10px
    padding 10px
    border: 1px solid transparent
    border-bottom: 1px solid gray
    transition: 0.3s ease
    &:hover
        cursor pointer
        border-color: #e1e1e1
        background-color: #e1e1e1!important
     


























.del
    width 100%                 